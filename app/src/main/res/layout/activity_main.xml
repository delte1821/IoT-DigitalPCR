        android:layout_height="wrap_content"
        android:background="#331B5E20"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/Detparm1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:inputType="number"
